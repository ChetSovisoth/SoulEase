# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this to your production server and rename to .env
# Update all values with your production credentials

APP_NAME="SoulEase"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Timezone and Locale
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - Production
DB_CONNECTION=pgsql
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_DATABASE=your_production_database
DB_USERNAME=your_production_user
DB_PASSWORD=your_production_password

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com

# Broadcasting - PRODUCTION REVERB
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache
CACHE_STORE=database

# Redis (Optional - for scaling Reverb)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail - Production
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# REVERB CONFIGURATION - PRODUCTION
# ===========================================
# These settings are for hosting on your own server

# Reverb Server Settings (Backend)
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# Reverb Application Credentials (keep these secret!)
REVERB_APP_ID=300354
REVERB_APP_KEY=c1yiwsjm5gce9cauvsjr
REVERB_APP_SECRET=4tywksjkz0qxvvicwy2f

# Reverb Client Settings (Frontend connects to these)
REVERB_HOST=yourdomain.com
REVERB_PORT=443
REVERB_SCHEME=https

# Frontend Environment Variables (Vite will use these)
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ===========================================
# JITSI VIDEO CONFERENCING
# ===========================================
# Use public Jitsi server (free) or your own instance
JITSI_DOMAIN=meet.jit.si

# ===========================================
# PADDLE PAYMENT GATEWAY - PRODUCTION
# ===========================================
PADDLE_CLIENT_SIDE_TOKEN=live_YOUR_LIVE_TOKEN_HERE
PADDLE_API_KEY=YOUR_LIVE_API_KEY_HERE
PADDLE_RETAIN_KEY=your-paddle-retain-key
PADDLE_WEBHOOK_SECRET="your-production-webhook-secret"
PADDLE_SANDBOX=false
PADDLE_VENDOR_ID=YOUR_VENDOR_ID

# Paddle Price IDs (create these in Paddle dashboard)
